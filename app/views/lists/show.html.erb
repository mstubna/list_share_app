<div class='medium-6 medium-offset-3 small-12 columns'>

  <%= link_to 'Back', root_path, class: 'secondary button' %>
  <% if @list.user == current_user %>
    <%= link_to 'Delete', list_path(@list), class: 'alert button', method: :delete, data: { confirm: t('views.list.confirm_delete') } %>
  <% end %>
  <%= link_to 'Edit', edit_list_path(@list), remote: true, class: 'button' %>

  <div id='list-show'>
    <%= render partial: 'list_show', object: @list %>
  </div>

  <div id='list-form' class='reveal-modal' data-reveal data-options="animation: 'fade'"></div>

</div>
