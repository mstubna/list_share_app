<div class='show-for-small-only'>
  <div class='small-12 columns clearfix'>
    <%= link_to 'New List', new_user_list_path(@user), remote: true, class: 'left button' %>
  </div>
</div>

<div class='show-for-medium-up'>
  <div class='medium-3 columns'>
    <%= link_to 'New List', new_user_list_path(@user), remote: true, class: 'button' %>
  </div>
</div>

<div class='small-12 medium-8 columns'>
  <div id='lists'>
    <%= render @lists %>
  </div>
</div>
<div id='list-form' class='reveal-modal' data-reveal data-options="animation: 'none';"></div>
